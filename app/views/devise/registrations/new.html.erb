<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>ユーザー新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name, "ユーザ名" %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :status_id, "ステータス" %><br />
        <%= f.collection_select :status_id, Status.all, :id, :name, { include_blank: "ステータスを選択してください" }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.label :university_name, "大学名" %><br />
        <%= f.text_field :university_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :thumbnail, "プロフィール画像" %><br />
        <%= f.text_field :thumbnail, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "電子メール" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上が必要です)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "新規登録", class: "btn btn-default" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
