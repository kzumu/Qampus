<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>自分の質問</h2>
    <hr>
    <% @posts.each do |post| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-8"><h5 class="panel-title"><%= link_to post.title, post_path(post) %></h5></div>
              <div class="col-md-2"><h5 class="panel-title text-right"><%=post.subject%></h5></div>
              <div class="col-md-2"><h5 class="panel-title">コメント<strong><%=post.comments.size%></strong>件</h5></div>
            </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-2" style="text-align:center;">
                <div><%= link_to image_tag(post.user.thumbnail, class: "img-thumbnail avatar"), user_path(post.user)%></div>
                <div><strong><%= link_to post.user.name, user_path(post.user.id) %></strong></div>
              </div>
              <div class="col-md-10">
                <p><%= post.body %></p>
                <br>
                <p><small>投稿日時：<%= post.created_at %></small></p>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    <br><br>
    <h2>いいねした質問</h2>
    <hr>
    <% @liked_posts.each do |liked_post| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-8"><h5 class="panel-title"><%= link_to liked_post.title, post_path(liked_post) %></h5></div>
              <div class="col-md-2"><h5 class="panel-title text-right"><%= liked_post.subject%></h5></div>
              <div class="col-md-2"><h5 class="panel-title">コメント<strong><%= liked_post.comments.size%></strong>件</h5></div>
            </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-2" style="text-align:center;">
                <div><%= link_to image_tag(liked_post.user.thumbnail, class: "img-thumbnail avatar"), user_path(liked_post.user)%></div>
                <div><strong><%= link_to liked_post.user.name, user_path(liked_post.user.id) %></strong></div>
              </div>
              <div class="col-md-10">
                <p><%= liked_post.body %></p>
                <br>
                <p><small>投稿日時：<%= liked_post.created_at %></small></p>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
