<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>プロフィール</h2>
    <div class="panel panel-default">
      <div class="panel-heading"><h4 class="panel-title">ユーザー</h4></div>
      <div class="panel-body">
        <div class="panel-style">
          <div class="panel-body-image">
            <% if @user.image.blank? %>
              <% if @user.thumbnail.blank? %>
                <%= image_tag 'thumbnails/default.png', class: 'img-thumbnail avatar'  %>
              <% else %>
                <%= image_tag @user.thumbnail, class: 'img-thumbnail avatar' %>
              <% end %>
            <% else %>
              <%= image_tag @user.image, class: 'img-thumbnail avatar' %>
            <% end %>
          </div>
          <div class="panel-body-body">
            <br><p>ユーザ名　　：  <%= @user.name %></p>
            <% unless @user.university_name.nil? %>
              <br><p>大学名　　　：  <%= @user.university_name %></p>
            <% end %>
            <br><p>ステータス　：  <%= @user.status.name %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
