<div class="like-link" id="like-link-<%= comment.id %>">
  <% if current_user.likes.find_by(comment_id: comment.id) %>
    <%= link_to unlike_path(comment.id), method: :delete, remote: true do %>
      <div class="btn btn-default glyphicon glyphicon-heart" id="heart-<%= comment.id %>">
        <%= comment.likes.count.to_s %>
      </div>
    <% end %>
  <% else %>
    <%= link_to like_path(comment.id), method: :post, remote: true do %>
      <div class="btn btn-default glyphicon glyphicon-heart-empty" id="heart-<%= comment.id %>">
        <%= comment.likes.count.to_s %>
      </div>
    <% end %>
  <% end %>
</div>
