<p id="notice"><%= notice %></p>
<h1><%= @post.title %> (<%=@post.subject%>)<!-- FIXME ボタンを右端に寄せたい -->　　<%= link_to '質問を編集', edit_post_path(@post), class: "btn btn-default" %></h1>
<hr>
<p><strong>タイトル：</strong><%= @post.title%>　　　<strong>科目名：</strong><%=@post.subject%></p>
<p><strong>本文：</strong><%=simple_format(@post.body)%><strong>ユーザ名：<a href="users/<%=@post.user.id%>"><%=@post.user.name%></a></strong></p>
<div class="row">
  <div class="col-md-1">
    <%= link_to image_tag(@post.user.thumbnail, class: "img-thumbnail", size: '60x60'), user_path(@post.user) %>
  </div>
  <div class="col-md-11">
    <p><strong><%= @post.user.name %></strong></p>
    <p><%= simple_format(@post.body) %></p>
    <p><%= @post.created_at %></p>
  </div>
</div>
<hr>

/* ここにフォーム　*/<br>
<h2>回答</h2>
<hr>
<% @comments.each do |comment|%>
  <p><strong>本文：</strong><%=simple_format(comment.body)%></p>
  <p><strong>ユーザ名：</strong><a href="users/<%=comment.user.try :id%>"><%=comment.user.try :name%></a></p>
  <div class="row">
    <div class="col-md-1">
      <% if comment.user.nil? %>
        <%= image_tag 'thumbnails/default.png', class: "img-thumbnail" %>
      <% else %>
        <%= link_to image_tag(comment.user.thumbnail, class: "img-thumbnail", size: '60x60'), user_path(comment.user)%>
      <% end %>
    </div>
    <div class="col-md-11">
      <p><strong><%= comment.user.try :name %> </strong></p>
      <p><%= simple_format(comment.body) %></p>
      <p><%= comment.created_at %></p>
    </div>
  </div>
  <hr>
<% end%>
