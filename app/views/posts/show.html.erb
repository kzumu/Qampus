<p id="notice"><%= notice %></p>
<hr>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= @post.title %> (<%=@post.subject%>)<!-- FIXME ボタンを右端に寄せたい -->　　<%= link_to '質問を編集', edit_post_path(@post), class: "btn btn-default" %></h4>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-1">
        <%= link_to image_tag(@post.user.thumbnail, class: "img-thumbnail", size: '60x60'), user_path(@post.user) %>
        <strong><a href="users/<%=@post.user.id%>"><%=@post.user.name%></a></strong>
      </div>
      <div class="col-md-11">
        <p><%= simple_format(@post.body) %></p>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-offset-1 col-md-2">
        <a href="#" align="center"><i class="fa fa-reply fa-2x" onclick=""></i></a>
      </div>
      <div class="col-xs-offset-1 col-md-2">
        <a href="#" align="center"><i class="fa fa-thumbs-up fa-2x"></i></a>
      </div>
      <div class="col-md-3">
      </div>
      <div class="col-md-3">
        <%= @post.created_at %>
      </div>
    </div>
  </div>
</div>


<div class="answer" class="panel panel-default" style="display: none;">
  <div class="panel-heading">
    <h4>回答</h4>
  </div>
  <div class="panel-body">

    <div class="row">
      <div class="col-md-1">
          <%= image_tag current_user.thumbnail, class: "img-thumbnail" %>
        <p><%=current_user.try :name%></p>
      </div>
      <div class="col-md-11">
        <%= form_with model: Comment.new do |f| %>
          <div class="form-group">
            <%= f.label :body  %><br />
            <%= f.text_field :body, class: "form-control" %>
          </div>
       <% end %>
      </div>
    </div>
  </div>
</div>

<hr>

<br>
<% @comments.each do |comment|%>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>回答</h4>
  </div>
  <div class="panel-body">

    <div class="row">
      <div class="col-md-1">
        <% if comment.user.nil? %>
          <%= image_tag 'thumbnails/default.png', class: "img-thumbnail" %>
        <% else %>
          <%= link_to image_tag(comment.user.thumbnail, class: "img-thumbnail", size: '60x60'), user_path(comment.user)%>
        <% end %>
        <a href="users/<%=comment.user.try :id%>"><%=comment.user.try :name%></a>
      </div>
      <div class="col-md-11">
        <p><%= simple_format(comment.body) %></p>
      </div>
    </div>

    <hr>
    <div class="row">
      <div class="col-xs-offset-1 col-md-2">
        <a href="#" align="center"><i class="fa fa-reply fa-2x"></i></a>
      </div>
      <div class="col-xs-offset-1 col-md-2">
        <a href="#" align="center"><i class="fa fa-thumbs-up fa-2x"></i></a>
      </div>
      <div class="col-md-3">
      </div>
      <div class="col-md-3">
        <%= comment.created_at %>
      </div>
    </div>
  </div>
</div>
<% end%>
