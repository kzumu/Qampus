<p id="notice"><%= notice %></p>
<h1><%= @post.title %> (<%=@post.subject%>)<!-- FIXME ボタンを右端に寄せたい -->　　<%= link_to '質問を編集', edit_post_path(@post), class: "btn btn-default" %></h1>
<hr>
<div class="row">
  <div class="col-md-1">
    <%= image_tag @post.user.thumbnail, class: "img-thumbnail"%>
  </div>
  <div class="col-md-11">
    <p><strong><%= @post.user.name %></strong></p>
    <p><%= simple_format(@post.body) %></p>
    <p><%= @post.created_at %></p>
  </div>
</div>
<hr>

/* ここにフォーム　*/<br>
<h2>回答</h2>
<hr>
<% @comments.each do |comment|%>
  <div class="row">
    <div class="col-md-1">
      <% if comment.user.nil? %>
        <%= image_tag 'thumbnails/default.png', class: "img-thumbnail" %>
      <% else %>
        <%= image_tag comment.user.thumbnail, class: "img-thumbnail" %>
      <% end %>
    </div>
    <div class="col-md-11">
      <p><strong><%= comment.user.try :name %> </strong></p>
      <p><%= simple_format(comment.body) %></p>
      <p><%= comment.created_at %></p>
    </div>
  </div>
  <hr>
<% end%>
