<p id="notice"><%= notice %></p>
<br>
<%= search_form_for @q, url:search_posts_path, local: true, class: 'form-inline' do |f| %>
  <%= f.hidden_field :univ, value: @univ%>
  <h1><%= @univ.name %>のトップページ　　　　　　　　　　　　<%= f.search_field :subject_cont, class: "form-control input-sm", placeholder: '科目名で検索！' %>  <%= f.submit "検索", class: "btn btn-default" %></h1>

<% end %>
<h2>最近の質問</h2>
<hr>
<% @posts.each do |post| %>
  <div class="panel panel-default">
    <div class="panel-heading">
     <h4><%= post.title %> (<%=post.subject%>)
    </div>
    <div class="panel-body">
     <div class="row">
       <div class="col-md-1">
         <%= image_tag post.user.thumbnail, class: "img-thumbnail"%>
         <strong><%= link_to post.user.name, user_path(post.user.id) %></strong>
       </div>
       <div class="col-md-11">
         <p><%= post.body %></p>
         <p><%= post.created_at %></p>
       </div>
     </div>
    </div>
  </div>
  <hr>
<% end %>

<%= link_to 'Edit', edit_univ_path(@univ) %> |
<%= link_to 'Back', univs_path %>
